{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "moduleResolution": "Node",
    "module": "ESNext",
    "target": "ESNext",
    "jsx": "react-jsx",
    "baseUrl": "src",
    "paths": {
      "@/*": [
        "*"
      ],
      "@/assets": [
        "assets/"
      ],
      "@/ts": [
        "ts/"
      ],
      "@/styles": [
        "styles/"
      ],
      "@/Header": [
        "components/Header/Header"
      ],
      "@/Footer": [
        "components/Footer/Footer"
      ],
      "@/Button": [
        "./components/Button/Button"
      ],
      "@/NavMenu": [
        "./components/Header/NavMenu/NavMenu"
      ],
      "@/GamesContainer": [
        "./components/GamesContainer/GamesContainer"
      ],
      "@/Input": [
        "./components/Input/Input"
      ]
    }
  },
  "files": [
    "src/index.tsx"
  ],
  "include": [
    "src",
    "src/**/*.ts",
    ".eslintrc.json",
  ],
}